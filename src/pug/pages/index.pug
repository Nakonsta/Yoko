extends ../layouts/page-list
block content
    .container
        .page-list
            .page-list-header
                .page-list-link-title
                    | Страница и ссылка
                .page-list-progress-title
                    | Верстка десктопная
                .page-list-progress-title
                    | Верстка мобильная
            .page-list-body
                -
                    var pages = [
                        {title: 'Главная', href: 'main.html', desktop: '-', mobile: '-'},
                        {title: 'Новости - список', href: 'news.html', desktop: '-', mobile: '-'},
                        {title: 'Новости - детальная', href: 'news-detail.html', desktop: '-', mobile: '-'},
                        {title: 'О нас', href: 'about-us.html', desktop: '-', mobile: '-'},
                        {title: 'Каталог', href: 'catalog.html', desktop: '-', mobile: '-'},
                        {title: 'Каталог - Добавление продукции в каталог', href: 'catalog-add.html', desktop: '+', mobile: '+'},
                        {title: 'Заказчикам', href: 'customers.html', desktop: '-', mobile: '-'},
                        {title: 'Поставщикам', href: 'suppliers.html', desktop: '-', mobile: '-'},
                        {title: 'Техподдержка', href: 'support.html', desktop: '-', mobile: '-'},
                        {title: 'Тарифы', href: 'tariffs.html', desktop: '+', mobile: '+'},
                        {title: 'Котировки', href: 'quotes.html', desktop: '+', mobile: '+'},
                        {title: 'Нормативная база ГК и 223-ФЗ', href: 'laws.html', desktop: '+', mobile: '+'},
                        {title: 'Нормативная база ГК и 223-ФЗ - детальная', href: 'laws-detail.html', desktop: '+', mobile: '+'},
                        {title: 'Реестр компаний - Компания', href: 'companies-detail.html', desktop: '+', mobile: '+'},
                        {title: 'Восстановление пароля', href: 'forgot-password-change.html', desktop: '+', mobile: '+'},
                    ];
                each page in pages
                    .page-list-item
                        .page-list-link-box
                            a.page-list-link(href = page.href)
                                | #{page.title}
                        .page-list-progress
                            .page-list-progress-item
                                | #{page.desktop}
                            .page-list-progress-item
                                | #{page.mobile}
